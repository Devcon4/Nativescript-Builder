{
    "compilerOptions": {
        "noImplicitAny": true,
        "removeComments": true,
        "module": "commonjs",
        "lib": ["es2015", "dom"],
        "target": "es5",
        "outDir": "dist/lib",
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "useCache": true,
    "useBabel": true,
    "babelOptions": {
        "babelrc": false, /* Important line */
        "presets": [
            "env"
        ]
    },
    "babelCore": "@babel/core"
}